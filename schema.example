#!/usr/bin/env php
<?php
require_once __DIR__ . '/vendor/autoload.php'; // or your bootstrap file
use LazarusPhp\LazarusDb\SchemaBuilder\SchemaLoader;
use LazarusPhp\LazarusDb\Database\Connection;
use App\System\Core\Files;
use Dotenv\Dotenv;
use LazarusPhp\Foundation\PathResolver\Resolve;

if (php_sapi_name() !== 'cli') {
    exit("This script can only be run from the command line.\n");
} {

    $argv = $_SERVER['argv'];
    $command = $argv[1] ?? "";
    $filename = $argv[2] ?? "";
    $filename = ucfirst($filename);
    $params = array_slice($argv, 2);

    Resolve::init(__DIR__);
    $root = Resolve::get("Root");
    // Check the filo[-e
    if (is_file("$root/.env")) {
        // Create Env File
        $env = Dotenv::createImmutable($root);
        // Load Env File
        $env->load();
        // Required and must not be empty
        $env->required(["type", "hostname", "username", "dbname"])->notEmpty();
        // Required but can be left empty (not recommended for production servers)
        $env->required("password");
    }

    Connection::activate();
     
    

    switch ($command) {
        case 'test':
            echo Resolve::get("Root");
                      $dir = $root ."/Migrations/Schemas";
                      echo "<hr> {$dir}";
            break;
        case 'migrate':
            $dir = $root."/Migrations/Schemas";
            SchemaLoader::load($dir,"up", $filename);
            break;
        case 'migrate:alter':
              $dir = $root . "/Migrations/Schemas";
              SchemaLoader::load($dir,"alter",$filename);
            break;
        case 'migrate:rollback':
            $dir = $root ."/Migrations/Schemas";
            SchemaLoader::load($dir, "down", $filename);
            break;
        default:
            echo "Unknown command: $command";
            break;
    }
}
