{
    "name": "lazarusphp/framework",
    "description": "A small slim framework build in php",
    "type": "project",
    "license": "GPL",
    "autoload": {
        "psr-4": {
            "App\\": "App/",
            "Migrations\\":"Migrations/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LazarusPhp\\SecurityFramework\\": "Dev/SecurityFramework/src",
            "LazarusPhp\\LazarusBridge\\":"Dev/LazarusBridge/src",
            "LazarusPhp\\SchemaBuilder\\":"Dev/SchemaBuilder/src",
            "LazarusPhp\\LazarusDb\\":"Dev/LazarusDb/src",
            "LazarusPhp\\Logger\\":"Dev/Logger/src",
            "LazarusPhp\\DateManager\\": "Dev/DateManager/src",
            "LazarusPhp\\AuthControl\\": "Dev/AuthControl/src",
            "LazarusPhp\\Exceptions\\": "Dev/Exceptions/src",
            "LazarusPhp\\Foundation\\": "Dev/Foundation/src"    
        }
    },
    "prefer-stable": true,
    "authors": [
        {
            "name": "Martin Bamber"
        }
    ],
    "require-dev": {
        "fakerphp/faker": "^1.9.1"
    },
    "minimum-stability": "dev",
    "require": {
        "php": "^8.0.2",
        "vlucas/phpdotenv": "^5.2",
        "laminas/laminas-diactoros": "^3",
        "phpmailer/phpmailer": "^6.2",
        "miladrahimi/phprouter":"^5",
        "lazarusphp/lazarusdb": "^v1.1.1",
        "lazarusphp/sessionmanager": "^v1.1.2",
        "lazarusphp/openhandler": "^1.0.0",
        "psr/log": "^3.0"
    },
    "scripts": {
        "post-install-cmd": [
            "if [ ! -f .env ]; then mv .env.example .env; else echo .env already exists; fi",
            "if [ ! -f schema ]; then mv schema.example schema; else echo file schema already exists; fi",
           "if [ ! -d Storage ]; then mkdir Storage; else echo Storage directory already exists; fi",
            "chmod -R 0777 Storage",
            "chmod +x build",
            "echo Install complete"
        ],
        "post-update-cmd": [
            "if [ ! -f .env ]; then mv .env.example .env; else echo .env already exists; fi",
            "if [ ! -f schema ]; then mv schema.example schema; else echo  file schema already exists; fi",
            "if [ ! -d Storage ]; then mkdir Storage; else echo Storage directory already exists; fi",
            "chmod -R 0777 Storage",
            "chmod +x build",
            "echo Update complete"


        ]
    }

}
